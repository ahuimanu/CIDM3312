@model IEnumerable<VatsimLibrary.VatsimClientV1.VatsimClientPilotV1>

<!DOCTYPE html>
<html>
<head>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h6 class="bg-secondary text-white text-center m-2 p-2">Pilots</h6>
    <div class="m-2">
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Cid</th>
                    <th>Real Name</th>
                    <th>Callsign</th>
                </tr>
            </thead>
            <tbody>
                @foreach (VatsimLibrary.VatsimClientV1.VatsimClientPilotV1 pilot in Model) {
                    <tr>
                        <td>@pilot.Cid</td>                        
                        <td>@pilot.Realname</td>
                        <td>@pilot.Callsign</td>                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>